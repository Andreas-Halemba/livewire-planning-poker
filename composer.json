{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "framework",
        "laravel"
    ],
    "require": {
        "php": "^8.2",
        "blade-ui-kit/blade-icons": "^1.5.1",
        "codeat3/blade-clarity-icons": "^1.10",
        "guzzlehttp/guzzle": "^7.5.1",
        "laravel/framework": "^12.0",
        "laravel/pulse": "^1.4",
        "laravel/reverb": "^1.6",
        "laravel/sanctum": "^4.0",
        "laravel/telescope": "^5.0",
        "laravel/tinker": "^v2.8.1",
        "lesstif/php-jira-rest-client": "^5.12",
        "livewire/livewire": "^3.4",
        "pusher/pusher-php-server": "^7.2.2",
        "saloonphp/laravel-plugin": "^3.0",
        "saloonphp/saloon": "^3.0",
        "secondnetwork/blade-tabler-icons": "^3.35"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.16.4",
        "ergebnis/composer-normalize": "^2.31",
        "fakerphp/faker": "^v1.21.0",
        "laravel/breeze": "^2.0",
        "laravel/pint": "^1.10",
        "laravel/sail": "^v1.21.5",
        "larastan/larastan": "^3.0",
        "mockery/mockery": "^1.5.1",
        "nunomaduro/collision": "^8.1",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.1.2",
        "spatie/laravel-ray": "^1.32.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "ergebnis/composer-normalize": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "barryvdh/laravel-ide-helper"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php -r \"getenv('COMPOSER_DEV_MODE') == 0 || print(exec('php ./vendor/bin/captainhook install -f'));\""
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
